        <Button Content="Lines" Command="{Binding NavigateToLines}" HorizontalAlignment="Left" Height="115" Margin="537,214,0,0" VerticalAlignment="Top" Width="425"/>
        <Button Content="Simulator" Command="{Binding NavigateToSimulator}" HorizontalAlignment="Left" Height="106" Margin="550,362,0,0" VerticalAlignment="Top" Width="382"/>
